  margin-top: 20rpx;
}

.mine_list_item_container {
  padding: 30rpx; 
  font-size: 32rpx;
  border-bottom: 0.5px solid #CCC;
  background: white;
}

.mine_op_list{
  border-top: 0.5px solid #CCC;
}

