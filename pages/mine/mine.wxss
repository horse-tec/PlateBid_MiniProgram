  margin: 20rpx;
  border-radius: 50%;
  border: 1px solid #ECECEC
}

.mine_header {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  background: white;
  border-bottom: 0.5px solid #CCC;
}

